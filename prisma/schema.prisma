generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int      @id @default(autoincrement())
  usuario   String   @unique
  password  String
  nombre    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Cliente {
  id        Int        @id @default(autoincrement())
  nombre    String
  cedula    String     @unique
  telefono  String?
  direccion String?
  foto      String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  formulas  Formula[]
  historias Historia[]
}

model Historia {
  id            Int       @id @default(autoincrement())
  fecha         DateTime  @default(now())
  observaciones String
  valor         Float?
  tipoPago      String    @default("pago")
  referido      String?
  clienteId     Int
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  cliente       Cliente   @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  examenes      Examen[]
}

model Examen {
  id         Int      @id @default(autoincrement())
  nombre     String   @default("Examen")
  imagen     String   // Base64 de la imagen
  historiaId Int
  createdAt  DateTime @default(now())
  historia   Historia @relation(fields: [historiaId], references: [id], onDelete: Cascade)
}

model Formula {
  id        Int           @id @default(autoincrement())
  fecha     DateTime      @default(now())
  clienteId Int
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  cliente   Cliente       @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  items     FormulaItem[]
}

model FormulaItem {
  id        Int     @id @default(autoincrement())
  nombre    String
  cantidad  Int
  unidad    String  @default("FRASCOS")
  formulaId Int
  formula   Formula @relation(fields: [formulaId], references: [id], onDelete: Cascade)
}

model Nota {
  id        Int      @id @default(autoincrement())
  fecha     DateTime
  hora      String
  contenido String
  estado    String   @default("abierta")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
